<html>
<head>
<title>news-web</title>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
<script src="../public/javascripts/angularApp.js"></script>
</head>
<body ng-app="news-web-app" ng-controller="main-controller">
<div>{{test}}</div>
<div ng-repeat="post in posts_title">{{post}}</div>
<div ng-repeat="post in posts | orderBy: '-upvotes'">{{post.title}} - upvotes: {{post.upvotes}}</div>
<button ng-click="addPost()">Post</button>
</body>
</html>
